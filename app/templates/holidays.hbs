<div class="off-canvas-wrap holidays_page" data-offcanvas>
  <div class="inner-wrap">
    {{outlet "appMenuList"}}

    {{#init-foundation}}
      <nav class="tab-bar submitted_page">
        <section class="left-small">
          <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
        </section>

        <section class="middle tab-bar-section">
          <h1 class="title">
            {{t "holiday.manage"}}
          </h1>
        </section>

        <section class="right-small">
          {{add-holiday allHolidays=arrangedContent}}
        </section>

      </nav>
    {{/init-foundation}}

    <section class="main-section">
      <div class="row">
        <div class="small-12 columns item-content">
          <ul class="list list-activity list-offer-items">
            <li class="holiday-description">
              {{t "holiday.description"}}
            </li>
            {{#each arrangedContent as |day|}}

              <li class='inbox_page'>
                {{holiday-detail day=day allHolidays=arrangedContent}}
              </li>

            {{/each}}
          </ul>
        </div>
      </div>
    </section>


  </div>
</div>
