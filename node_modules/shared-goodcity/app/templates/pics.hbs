<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    {{outlet "appMenuList"}}

    {{#init-foundation}}
      <nav class="tab-bar">
        <section class="left-small">
          {{#if session.isLoggedIn}}
            <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
          {{else}}
            {{link-to (t "back") 'register' classNames='back'}}
          {{/if}}
        </section>

        <section class="middle tab-bar-section">
          <h1 class="title">{{t "pics.title"}}</h1>
        </section>
      </nav>
    {{/init-foundation}}

    <section class="main-section faq_list">
      {{#visit-page-start}}
        <div class="row">
          <div class="small-12 columns">
            <p>{{t "pics.confidentiality"}}</p>

            <p>
              {{t "pics.ask_to_access"}}
              {{#external-link linkUrl="https://www.crossroads.org.hk/home/contact/privacy/"}}
                {{t "pics.here"}}
              {{/external-link}}
            </p>

            <p>{{t "pics.change_privacy_policy"}}</p>

            <p>{{t "pics.child"}}</p>

            <p><b>{{t "pics.commitement_to_you"}}</b></p>

            <ul>
            <li>{{t "pics.use_purposely"}}</li>
            <li>{{t "pics.will_not_sell_dara"}}</li>
            <li>{{t "pics.unsubscribe"}}</li>
            <li>{{t "pics.questions"}}</li>
            </ul>

            <p><b>{{t "pics.personal_data_collected"}}</b></p>

            <p>{{t "pics.provide_data_to_use_services"}}</p>

            <ul>
              <li>{{t "pics.contact_details"}}</li>
              <li>{{t "pics.gender_and_dob"}}</li>
              <li>{{t "pics.financial_information"}}</li>
              <li>{{t "pics.personal_identifier"}}</li>
              <li>{{t "pics.responses_to_feedback"}}</li>
            </ul>

            <p><b>{{t "pics.purpose_and_use"}}</b></p>

            <p>{{t "pics.will_use_data_for_following"}}</p>

            <ul>
              <li>{{t "pics.new_or_any_invitation"}}</li>
              <li>{{t "pics.respond_to_your_questions"}}</li>
              <li>{{t "pics.to_process_feedback"}}</li>
              <li>{{t "pics.requested_by_govt_or_legal_claim"}}</li>
              <li>{{t "pics.deliver_items_to_you"}}</li>
              <li>{{t "pics.improve_services"}}</li>
              <li>{{t "pics.prevent_crime"}}</li>
            </ul>

            <p><b>{{t "pics.third_parties"}}</b></p>
            <p>{{t "pics.third_party_organisations"}}</p>

            <p>{{t "pics.social_welfare_dept"}}</p>

            <p><b>{{t "pics.crossroads_network"}}</b></p>
            <p>{{t "pics.use_data_in_crossroads_network"}}</p>

            <p><b>{{t "pics.correction_of_data"}}</b></p>
            <p>{{t "pics.right_to_review_and_correct"}}</p>

            <p>{{t "pics.last_updated"}}</p>

          </div>
        </div>
      {{/visit-page-start}}

      {{go-to-top-button}}
    </section>

  </div>
</div>
