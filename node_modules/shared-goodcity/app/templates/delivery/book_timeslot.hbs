<nav class="tab-bar">
  <section class="left-small">
    {{link-to (t "back") 'offer.plan_delivery' classNames="back"}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">{{t "delivery.book_timeslot.select_time"}}</h1>
  </section>
</nav>

<section class="main-section book-timeslot">
  <div class="row">
    <div class="small-12 columns">

      <div class='schedule-info'>{{t "delivery.book_timeslot.hint"}}</div>

      <ul>
        {{#each availableSlots as |item|}}
          <li>
            {{radio-button name="timeslot" selection=isSelected value=item.id id=item.id}}
            <label for={{item.id}}>
              <label class='schdule-date' for={{item.id}}>{{display-datetime item.scheduledAt format='dddd, MMMM Do'}}</label><br/>
              {{item.slotName}}
            </label>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>

<div class="btm">
  <div class="row">
    <div class="small-6 columns">
      {{#online-button action="assignSchedule" classNames="button expand"}}{{t "crossroads_truck.book_time"}}{{/online-button}}
    </div>
    <div class="small-6 columns">
      {{#online-button action="" classNames="button secondary expand"}}{{t "crossroads_truck.show_more"}}{{/online-button}}
    </div>
  </div>
</div>
