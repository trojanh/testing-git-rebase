<nav class="tab-bar">
  <section class="left-small">
    {{#if session.isAdminApp}}
      {{link-to (t 'back') "review_offer.logistics" model.offer classNames='back'}}
    {{else}}
      {{link-to (t 'back') "offer.transport_details" model.offer classNames='back'}}
    {{/if}}
  </section>

  <section class="middle tab-bar-section">
    <h1 class="title">
    {{#if isCancel}}
      {{t 'delivery.cancel.cancel_title'}}
    {{else}}
      {{t 'delivery.cancel.modify_title'}}
    {{/if}}
    </h1>
  </section>
</nav>

<section class="main-section cancel_offer">
  <div class="row info">
    <div class="small-12 columns">

      <div>
      <i class="fa fa-exclamation-triangle">  </i>
      {{#if isCancel}}
        {{t 'delivery.cancel.no_ggv_cancel'}}
      {{else}}
        {{t 'delivery.cancel.no_ggv_modify'}}
      {{/if}}

      </div>

      <div>{{t 'delivery.cancel.cancel_ggv'}}</div>

      <ul class='call_ggv'>
        {{#if driverContact}}
          <li>{{phone-number number=driverContact}} ({{t 'delivery.cancel.driver_mobile'}}) or</li>
        {{/if}}
        <li>{{phone-number number=gogovanContact}} ({{t 'delivery.cancel.ggv_office'}})</li>
      </ul>

      <div>{{t 'delivery.cancel.confirm_ggv_cancel'}}</div>

    </div>
  </div>
  <div class="row">
    <div class="small-10 small-offset-1 columns">
      {{#if session.isAdminApp}}
        {{#link-to "review_offer.logistics" model.offer classNames="button secondary expand"}}{{t 'delivery.cancel.back'}}{{/link-to}}
      {{else}}
        {{#link-to "offer.transport_details" model.offer classNames="button secondary expand"}}{{t 'delivery.cancel.back'}}{{/link-to}}
      {{/if}}
    </div>
  </div>
</section>
