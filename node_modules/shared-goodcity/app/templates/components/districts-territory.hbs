<div class="row">
  <div class="small-12 columns ui">
    <label>{{t "register.districts"}}</label>
    <ul class="radio-buttons">
      <li class="radio active" id="all" {{action 'findDistrictbyTerritory'
      on="click"}}>{{t "all"}}</li>
      {{#each allTerritory as |territory|}}
        <li class="radio" {{action "findDistrictbyTerritory" territory on="click"}}>
          {{territory.name}}
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="small-12 columns ui">
    <label>

      {{select-list
        content=districtsByTerritory
        on-change=(action (mut selectedDistrict))
        selectedValue=currentSelected
        value=currentSelected
        prompt=selectDistrictLabel
        required='true'
        selectArrow=true }}

    </label>
  </div>
</div>
