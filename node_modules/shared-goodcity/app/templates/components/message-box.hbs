<div class="reveal-modal-bg">
</div>

<div id="messageBox" class="small reveal-modal">
  <p id="messageBoxText">
    {{message}}
    {{yield}}
  </p>

  {{#if btn2Text}}
  <a id="btn2" class="right button" {{action "btn2Click"}}>{{btn2Text}}</a>
  {{/if}}
  <a id="btn1" class="right button" {{action "btn1Click"}}>{{btn1Text}}</a>
  <div style="clear:both;"></div>

  {{#if displayCloseLink}}
    <div><a class="right closeLink" {{action "closeModal"}}>{{t "cancel"}}</a></div>
  {{/if}}

  {{#if summaryText}}
    <div class="summary">{{summaryText}}</div>
  {{/if}}

</div>
